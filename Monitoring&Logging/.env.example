# Observability API configuration (.env.example)
# Copy to .env and adjust values for your environment. Do not commit real secrets.

# Bind interface and port for the Observability API
OBS_HOST=0.0.0.0
OBS_PORT=8083

# API keys as comma-separated name:key pairs. Example: "backend:secret1,frontend:secret2"
OBS_API_KEYS=backend:change-me

# Enable or disable JSON file persistence for in-memory stores ("true"/"false")
OBS_ENABLE_PERSISTENCE=true

# Optional data directory for JSON snapshots (auto-created)
OBS_DATA_DIR=data
