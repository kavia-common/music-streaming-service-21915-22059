# Monitoring & Logging service environment example
# Copy to .env and set appropriate values for your environment.

# Host and port for the Observability FastAPI server (used by process managers or compose configs)
OBS_HOST=0.0.0.0
OBS_PORT=8083

# API keys for bearer auth in the format "name1:key1,name2:key2"
# Example: OBS_API_KEYS=frontend:dev-frontend-key,backend:dev-backend-key
# If left empty, requests will be allowed (development mode only).
OBS_API_KEYS=frontend:change-me,backend:change-me-too

# Data dir for simple JSON persistence (mounted volume recommended in production)
OBS_DATA_DIR=./data

# Enable or disable persistence to JSON files (true/false)
OBS_ENABLE_PERSISTENCE=true
